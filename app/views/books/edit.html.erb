<h2>Editing Book</h2>
<!-- form_with内のmodel: Book.new はcontrollerで定義。ここではインスタンス変数を使う -->
<%= form_with model: @book do |f| %>
  <div class="field">
    <label for="title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "Update Book" %>
  </div>
  
<% end %>

<%= link_to "Show", "/books/#{@book.id}" %>
<%= link_to "Back", "/books" %>